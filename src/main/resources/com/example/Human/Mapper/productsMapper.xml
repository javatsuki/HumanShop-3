<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Human.Mapper.ProductsMapper">

	<select id="selectAll" resultType="com.example.Human.entity.Products">
    	SELECT product_id, product_name, price, image, stock_amount, birthday, detail FROM Products <!-- where product_id = 5 -->
	</select>
	
	<!--  商品詳細で出したいとこ -->
	<select id="products_detail" resultType="com.example.Human.entity.Products">
		SELECT product_name, detail FROM Products where product_id = 5
	</select>
</mapper>